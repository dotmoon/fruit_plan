  margin: 15rpx 30rpx 15rpx 40rpx;
}
.goods .good-item .content{
  margin: 10rpx 20rpx 10rpx;
}
.goods .good-item .content .name{
  display: flex;
  font-weight:500;
  font-size: 35rpx;
