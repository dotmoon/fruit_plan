<view class="swiper-tab">
 <view class="swiper-tab-list {{currentTab==0 ? 'on' : 'off'}}" data-current="0" bindtap="swichNav">当季热销</view>
 <view class="swiper-tab-list {{currentTab==1 ? 'on' : 'off'}}" data-current="1" bindtap="swichNav">水果拼盘</view>
 <view class="swiper-tab-list {{currentTab==2 ? 'on' : 'off'}}" data-current="2" bindtap="swichNav">果汁饮料</view>
 <view class="swiper-tab-list {{currentTab==3 ? 'on' : 'off'}}" data-current="3" bindtap="swichNav">已完成</view>
</view>



  <swiper current="{{currentTab}}" class="swiper-box" duration="300" circular="true" style="height:1000rpx" bindchange="bindChange">
    <swiper-item class="goods"> 
      <scroll-view scroll-y="true" style="height: 1000rpx">

        <view wx:for="{{goods}}" class="good-item" wx:for-item="good" wx:for-index="index" data-good="{{good}}">
          <view class="icon">
            <image src="{{good.icon}}" style="width: 200rpx;height: 200rpx"></image>
          </view>
          <view class="content">
            <view class="name">{{good.name}}</view>
            <view class="tag">{{good.tag}}</view>
            <view class="cartControl">
              <view class="price">
                <text>{{good.price}}</text>
                <text class="unit">元</text>
              </view>
              <block  wx:if="{{good.store > 0}}">
                <view wx:if="{{good.Count == 0}}">
                  <view class="add"  data-index="{{index}}" catchtap="changeState">
                    <image style="width: 80rpx; height: 80rpx" src="/assets/images/cart_red.png"> </image>
                  </view>
                </view>
                <view  wx:else>
                  <view class="remove" data-index="{{index}}" catchtap="changeState">
                    <image style="width: 80rpx; height: 80rpx" src="/assets/images/cart_black.png"> </image>
                  </view>
                </view>
              </block>
              <block wx:else>
                <view class="sellout">今日售完</view>
              </block>
            </view>
          </view>
        </view>
   
    </scroll-view>
  </swiper-item>
 
 
 
