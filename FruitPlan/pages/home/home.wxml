<view class="header">
    <view class="content-wrapper">
      <view class="avatar">
        <image src="/assets/images/home/cover.jpg" style="width:64px;height:64px;"></image>
      </view>
      <view class="content">
        <view class="title">
          <image src="/assets/images/home/brand.png" style="width:30px;height:18px;"></image>
          <span class="name">冰爽夏季</span>
        </view>
        <view class="description">
            蜂鸟专送/38分钟送达
        </view>
        <view v-if="seller.supports" class="support">
          <span class="icon" :class="classMap[seller.supports[0].type]">
            <image src="/assets/images/home/decrease.png" style="width:12px;height:12px;"></image>
          </span>
          <span class="text">在线支付满28减5</span>
        </view>
      </view>
      <view class="supports-count">
        <view class="count">5个</view>
      </view>
    </view>
    <view class="bulletin-wrapper">
      <image src="/assets/images/home/bulletin.png" style="width:22px;height:12px;"></image>
      <span class="bulletin-text">"这是公告"</span>
    </view>
    <view class="background">
      <image src="/assets/images/home/cover.jpg" style="width:100%;height:100%;"></image>
    </view>
  </view>
